= form_for @shift_msg, :url=>'/shiftmsg',:html => { :class => 'form-horizontal' } do |f|  
  #modalnew.modal.hide.fade{:tabindex=>"-1", :role=>"dialog" ,:'aria-labelledby'=>"myModalLabel", :'aria-hidden'=>"true"}
    .modal-header
      %button.close{:type=>"button" ,:'data-dismiss'=>"modal", :'aria-hidden'=>"true"}
        ×
      %h3#myModalLabel
        Excusa
    .modal-body
      .p    
        .control-group
          = f.label "Usuario DI", :class => 'control-label'
          .controls
            = f.text_field :username, :class => 'text_field'
        .control-group
          = f.label "Contraseña DI", :class => 'control-label'
          .controls
            = password_field_tag :password
        .control-group
          = f.label "Explicación", :class => 'control-label'
          .controls
            = f.text_area :message, :class => 'text_area', :style=>"height:200px"
        .control-group.hide
          = f.label :log_id, :class => 'control-label'
          .controls
            = f.number_field :log_id, :class => 'number_field'

    .modal-footer
      %button.btn{:'data-dismiss'=>"modal", :'aria-hidden'=>"true"}
        Cerrar
      = f.submit "Guardar Mensaje", :class => 'btn btn-primary'